{
  "name": "grid-root",
  "private": true,
  "packageManager": "pnpm@10.18.0",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.10.1",
    "prettier": "^3.6.2"
  },
  "scripts": {
    "test:e2e": "playwright test",
    "test:e2e:auth:ui": "playwright test -c playwright.config.auth.ts --ui",
    "test:e2e:auth:debug": "playwright test -c playwright.config.auth.ts --debug",
    "test:e2e:auth:headed": "playwright test -c playwright.config.auth.ts --headed",
    "test:e2e:auth:report": "playwright -c playwright.config.auth.ts show-report",
    "test:e2e:no-auth": "playwright test",
    "test:e2e:no-auth:ui": "playwright test --ui",
    "test:e2e:no-auth:headed": "playwright test --headed",
    "test:e2e:no-auth:report": "playwright show-report",
    "test:e2e:codegen": "playwright codegen http://localhost:5173"
  }
}
