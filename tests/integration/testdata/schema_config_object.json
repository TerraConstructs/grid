{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["vpc_id", "cidr"],
  "properties": {
    "vpc_id": {
      "type": "string",
      "pattern": "^vpc-[a-z0-9]+$"
    },
    "cidr": {
      "type": "string",
      "pattern": "^([0-9]{1,3}\\.){3}[0-9]{1,3}/[0-9]{1,2}$"
    },
    "enable_dns": {
      "type": "boolean"
    },
    "subnets": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "az"],
        "properties": {
          "id": {"type": "string"},
          "az": {"type": "string"}
        }
      }
    }
  },
  "additionalProperties": false,
  "description": "Network configuration object with VPC and subnet details"
}
