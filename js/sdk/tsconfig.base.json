{
  "compilerOptions": {
    "target": "ES2022",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "rootDir": "."
  },
  "include": ["src/**/*.ts", "gen/**/*.ts"],
  "exclude": ["lib", "node_modules", "test"]
}
